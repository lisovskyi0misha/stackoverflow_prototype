= turbo_frame_tag "answer-comment-form-#{@answer.id}" do
  = bootstrap_form_for @comment, url: question_comments_path(question_id: @answer.question_id) do |f|
    = f.text_field :body, label: 'Comment'
    = f.hidden_field :commentable_type, value: 'Answer'
    = f.hidden_field :commentable_id, value: @answer.id
    = f.submit 'Send'
